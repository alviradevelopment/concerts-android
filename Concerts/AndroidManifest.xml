<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alviradevelopment.android.concerts"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="alviradevelopment.android.concerts.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="alviradevelopment.android.concerts.SettingsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_settings"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="alviradevelopment.android.concerts.ArtistsActivity"
            android:label="@string/title_activity_artists" >
        </activity>
        <activity
            android:name="alviradevelopment.android.concerts.ShowsActivity"
            android:label="@string/title_activity_shows" >
        </activity>
        <activity
            android:name="alviradevelopment.android.concerts.CrawlerActivity"
            android:label="@string/title_activity_crawler" >
        </activity>
    </application>

</manifest>